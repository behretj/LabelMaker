{
    "[python]": {
        "editor.formatOnSaveMode": "file",
        "editor.formatOnSave": true,
        "editor.defaultFormatter": "eeyore.yapf"
    },
    "python.defaultInterpreterPath": "${env:HOME}/.conda/envs/labelmaker/bin/python",
    "yapf.args": [
        "--style",
        "{based_on_style: google, indent_width: 2}"
    ],
    "editor.tabSize": 2,
    "python.analysis.extraPaths": [
        "./3rdparty/ov-seg",
        "./3rdparty/InternImage/segmentation",
        "./3rdparty/omnidata/omnidata_tools/torch",
        "./mmseg/RGBX_Semantic_Segmentation",
        "./mmseg/Depth2HHA-python",
    ],
    "editor.detectIndentation": true,
}
